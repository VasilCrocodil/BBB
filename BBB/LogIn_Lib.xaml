<Window x:Class="BBB.LogIn_Lib"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BBB"
        mc:Ignorable="d"
        Title="LogIn_Lib" Height="450" Width="450" Background="LightGray">
    <Border
        Background="White"
        Margin="20">

        <StackPanel>
            <Label Content="Log In" Foreground="Blue" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="LibrarianID" Foreground="Black"></Label>

            <TextBox x:Name="txtLibID" Background="White" Foreground="Black" FontSize="18"></TextBox>
            <Label Content="Password" Foreground="Black"></Label>
            <PasswordBox x:Name="txtPassword" Background="White" Foreground="Black" FontSize="18"></PasswordBox>
            <Button Content="Submit" Margin="60,20" Background="#FF930808" Click="Button_Click"></Button>

        </StackPanel>
    </Border>
</Window>
